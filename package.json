{
  "name": "eqanun-notifier",
  "version": "1.0.0",
  "description": "E-qanun.az new legal acts notifier (NestJS + TypeORM + PostgreSQL + Telegram)",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "migration:generate": "npm run build && node dist/database/datasource.js migration:generate dist/database/migrations/auto-migration",
    "migration:run": "npm run build && node dist/database/datasource.js migration:run",
    "migration:revert": "npm run build && node dist/database/datasource.js migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/terminus": "^10.2.2",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/swagger": "^7.4.2",
    "axios": "^1.7.4",
    "cheerio": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "telegraf": "^4.16.3",
    "nestjs-telegraf": "^2.8.1",
    "typeorm": "^0.3.20",
    "pg": "^8.11.5",
    "joi": "^17.12.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.3",
    "@nestjs/testing": "^10.3.2",
    "@types/node": "^20.12.12",
    "typescript": "^5.4.5",
    "ts-node": "^10.9.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5"
  }
}